---
import { getBlogParams } from "../utils/params";
const { blog } = Astro.props;

const blogParams = getBlogParams(blog);
const url = `/blog/${blogParams.path}`;
---

<a href={url} class="block">
  <li
    class="bg-background group flex flex-col items-start rounded-lg border border-default p-5 shadow-md transition-shadow hover:shadow-lg md:flex-row"
  >
    <div class="flex-1 pr-3">
      <h3
        class="pt-1 text-2xl font-semibold transition-colors group-hover:text-primary"
      >
        {blog.data.title}
      </h3>
      <time
        datetime={blog.data.pubDate.toLocaleDateString()}
        class="mt-3 block text-sm text-offset"
      >
        {
          new Date(blog.data.pubDate).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
      <p class="mt-4 line-clamp-2 text-offset">{blog.data.description}</p>
    </div>
    {
      blog.data.image && (
        <div class="mt-4 block w-full rounded-lg md:w-1/4 lg:mt-1">
          <img
            src={blogParams.image}
            alt={blog.data.title}
            class="w-full rounded-lg object-cover object-center transition-transform duration-300 md:group-hover:scale-105 lg:h-auto"
          />
        </div>
      )
    }
  </li>
</a>
